<div class="container text-center ">
<h1>Listing questions</h1>
<p>Total: <%= @questions.size %></p>
<p><%= link_to 'New Question', new_question_path, class:"btn btn-warning" %></p>
<table class="table table-hover table-responsive ">
  <tr>
    <th  class="text-center">Question</th>
    <th  class="text-center">Choices</th>
    <th colspan="3"  class="text-center">Options</th>
  </tr>
  <% @questions.each do |question|  %>
  <tr>
    <td><%= question.text %></td>
    <td class="text-left">
      <ul>
        <%  question.choices.each do |choice| %>
            <li>
              <%= choice.text  %>
              <% if choice.correct %>
                (Correct)
              <% end %>
            </li>
            <% end %>
      </ul>
    </td>
    <td><%= link_to 'Show', question, class: "btn btn-info"  %></td>
    <td><%= link_to 'Edit', edit_question_path(question),class: "btn btn-success"%></td>
    <td><%= link_to 'Destroy', question,  method: :delete, data: { confirm: '¿Estás seguro?' },class: "btn btn-danger" %></td>
  </tr>
      <% end %>
</table>
</div>