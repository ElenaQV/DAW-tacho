<%= form_for @libro do |f|%>
<% if @libro.errors.any %>
        <div id="error_explanation">
          <h2> Errores: </h2>
        <ul>
            <% @libro.errors.full_messages do |msg| %>
          <li><%= msg %>/li>
             <% end %>
        </ul>
              </di>
          <% end %>

  Titulo: <%= f.text_field :titulo %><br />
  Autor: <%= f.text_field :autor %><br />
  Descripcion: <%= f.text_area :descipcion %><br />
  Año: <%= f.text_field :anio%><br />
<%= f.submit 'Enviar datos' %>
<% end %>

<hr />
Listar los libros <br />
<table border="1">
<tr>
  <th>Titulo</th>
  <th>Año</th>
</tr>
  <% if !@libros.blank? %>
  <% for item in  @libros %>
        <tr>
        <td><%= link_to  item.titulo,
                         :controller => :prestamos,
                         :action => :new, :id => item.id %></td>
        <td>(<%= item.anio %>)</td>
        </tr>
   <% end %>
    </table>
  <% else %>
 No hay libros registrados.
<% end %>

